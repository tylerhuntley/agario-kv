#:kivy 1.10.0

<Cell>:
    size: self.size

    canvas:
        Color:
            rgb: 0, 0, 1
        Ellipse:
            pos: self.x-self.diameter/2, self.y-self.diameter/2
            size: self.diameter, self.diameter
    Label:
        center: self.parent.pos
        text: str(self.parent.mass)

<Food>:
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            pos: self.x-5, self.y-5
            size: 10, 10

<Field>:
    player: player

    canvas:
        Color:
            rgb: 1, 1, 1
        Line:
            points: 0,0, 0,self.height, self.width,self.height, self.width,0, 0,0

    Cell:
        id: player
