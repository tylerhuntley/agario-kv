#:kivy 1.10.0
#:import Vector kivy.vector.Vector

<Cell>:
    canvas:
        Color:
            rgb: 0, 0, 1
        Ellipse:
            pos: Vector(self.offset) + self.pos - (self.radius, self.radius)
            size: self.size
    Label:
        center: Vector(root.offset) + root.pos
        text: str(self.parent.mass)

<Food>:
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            pos: Vector(self.offset) + self.pos - (5, 5)
            size: 10, 10

<Blob>:
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            pos: Vector(self.offset) + self.pos - (10, 10)
            size: 20, 20

<Field>:
    player: player

    canvas:
        Color:
            rgb: 1, 1, 1
        Line:
            points: self.border
            close: True

    Cell:
        id: player
