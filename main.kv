#:kivy 1.10.0
#:import Vector kivy.vector.Vector

<Cell>:
    size: self.size

    canvas:
        Color:
            rgb: 0, 0, 1
        Ellipse:
            pos: Vector(self.offset) + self.pos - (self.diameter/2, self.diameter/2)
            size: self.diameter, self.diameter
    Label:
        center: Vector(root.offset) + root.pos
        text: str(self.parent.mass)

<Food>:
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            pos: Vector(self.offset) + self.pos - (5,5)
            size: 10, 10

<Field>:
    player: player

    canvas:
        Color:
            rgb: 1, 1, 1
        Line:
            points: self.border
            close: True

    Cell:
        id: player
